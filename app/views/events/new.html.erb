<div class="wrapper-form">
  <div class="simple-form">
    <div class="simple-form wrapper">
      <%= simple_form_for(@event) do |f| %>
        <%= f.input :title %>
        <%= f.input :date,
                    as: :string,
                    input_html: { data: { controller: "datepicker" } } %>
          <div data-controller="address" data-action="map-loaded@window->address#initGoogle">
        <%= f.input :address, html: { autocomplete: 'off' }, input_html: { data: { address_target: 'input' } } %>
          </div>
          <%= f.input :genre, collection: %w[techno house acid garage minimal]%>
<%= f.input :intensity, collection: %w[low medium high extreme]%>
<%= f.input :queuing_time, collection: %w[long average short] %>
<%= f.input :door_policy, collection: %w[strict average easy] %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
